
/* ABOUT top  */
.page-title {
  text-align: center;
}

.about-top{
  text-align: center;
  margin-top: 30px;
}

.about-top p {
  line-height: 45px;
  font-size: 1em;
}

@media only screen and (max-width:589px){
  .about-top p {
    line-height: 35px;
  }
}

/* ABOUT hello */

.about-hello {
  text-align: center;
  display: flex;
}

.about-hello-logo {
  width: 40%;
}

.about-hello h2 {
  margin: 0;
}

.about-hello-box {
  width: 80%;
  height: 12px;
  background-color: #DF8800;
  margin: 0 auto;
}

.about-hello-card,
.about-hello-image-wrapper{
  flex: 1;
}

.about-hello-card {
  box-shadow: 0px 8px 14px 8px #00000014;
  border-radius: 10px;
  padding-bottom: 50px;
  background-color: #fff;
}

.about-concept {
  border-top: 1px solid #000;
  border-bottom: 1px solid #000;
  border-radius: 10px;
  width: 85%;
  margin: 0 auto;
  padding: 50px 0;
}

.about-hello h3 {
  color: #FFFFFF;
  background-color: #DF8800;
  display: inline-block;
  padding: 0 30px;
  border-radius: 30px;
  font-weight: bold;
  font-size: 1em;
  margin-bottom: 0;
}

.about-hello .important-element {
  margin: 0;
}

.about-hello .important-element:first-of-type {
  margin-top: 5px;
}

.about-hello .important-element span {
  font-weight: bold;
}

/* 画像調整あとで */
.about-hello-image {
  width: 75%;
  height: 75%;
  margin: 0;
}

@media only screen and (max-width:589px){
  .about-hello {
    flex-direction: column-reverse;
  }
}

/* SPICE SYRUP CURRY 共通 */
.spice-container {
  width: 90%;
  margin: 0 auto;
}

.syrup-or-curry-switch ul {
  list-style: none;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #DF8800;
  height: 49px;
}

.syrup-or-curry-switch ul li:first-of-type {
  margin-right: 20px;
}

.syrup-or-curry-switch ul li a {
  padding: 10px 20px;
  display: block;
  font-weight: bold;
  border-radius: 10px 10px 0 0;
}

.nav-active a {
  background-color: #DF8800;
  border: 1px solid #DF8800;
  color: #fff;
}

.nav-not-active a {
  border-top: 1px solid #DF8800;
  border-right: 1px solid #DF8800;
  border-left: 1px solid #DF8800;;
}

@media only screen and (max-width:589px){
  .syrup-or-curry-switch ul {
    display: block;
  }
}

/* SPICE SYRUP */
.syrup p {
  line-height: 35px;
}

.syrup-title {
  text-align: center;
  margin: 75px 0;
}

.syrup-title h2 {
  font-size: 55px;
  font-weight: 900;
  margin: 0;
  line-height: 55px;
}

@media only screen and (max-width:589px){
  .syrup-title {
    margin: 30px 0;
  }

  .syrup-title h2 {
    font-size: 30px;
    line-height: 30px;
  }
}

/* feature共通サブタイトル */
.syrup-subtitle {
  display: flex;
  margin-bottom: 100px;
}

.syrup-subtitle p {
  margin: 0;
  text-align: center;
}

.syrup-number {
  border-right: 2px solid #ADADAD;
  padding-right: 15px;
} 

.syrup-number p {
  font-weight: bold;
  font-family: 'ヒラギノ角ゴ StdN','Hiragino Kaku Gothic StdN',sans-serif;
}
.feature {
  font-size: 14px;
}
.number {
  font-size: 45px;
  line-height: 45px;
}

.syrup-subtitle-text {
  display: flex;
  flex-direction: column-reverse;
}

.syrup-subtitle-text p{
  font-size: 40px;
  line-height: 35px;
  padding-left: 15px;
}

@media only screen and (max-width:589px){
  .feature {
    font-size: 10px;
  }

  .number {
    font-size: 30px;
  }

  .syrup-subtitle {
    margin-bottom: 30px;
  }
  

  .syrup-subtitle-text p {
    font-size: 25px;
  }
}
/* feature共通　コンテンツ内容 */
.feature-flex {
  display: flex;
}

.feature-pc-left,
.feature-pc-right {
  flex: 1;
}

.feature-center {
  text-align: center;
}

.feature-line-text {
  font-weight: bold;
  font-size: 1.5em;
  background: linear-gradient(transparent 75%, #F7C600 75%);
  display: inline-block;
}

.caption-bold,
.text-bold {
  font-weight: bold;
  font-size: 1.2em;
}

.syrup span {
  font-weight: bold;
}


@media only screen and (max-width:589px){
  .feature-flex {
    flex-direction: column;
  }

  .feature-center p {
    text-align: left;
  }

  .feature-line-text {
    font-size: 1em;
  }

  .caption-bold,
  .text-bold{
    font-size: 1em;
  }

  .br-pc-none {
    display: none;
  }
}

